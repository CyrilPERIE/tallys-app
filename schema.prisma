datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Bet {
  id        Int         @id @default(autoincrement())
  courseId  String
  strategy  BetStrategy
  betType   BetType     @default(E_SIMPLE_PLACE)
  amount    Int
  horseNums Int[]
  betStatus BetStatus   @default(PENDING)
  gain      Float?
  odds      Float?
  profit    Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BetStrategy {
  Random
  Favoris
  Foule_v1_0
}

enum BetType {
  E_SIMPLE_GAGNANT
  E_SIMPLE_PLACE
  E_COUPLE_ORDRE
  E_TRIO_ORDRE
  E_SUPER_QUATRE
  E_COUPLE_GAGNANT
  E_COUPLE_PLACE
  E_DEUX_SUR_QUATRE
  E_MULTI
  E_TIERCE
  E_QUARTE_PLUS
  E_QUINTE_PLUS
  E_TRIO
  E_MINI_MULTI
  E_PICK5
  SIMPLE_GAGNANT_INTERNATIONAL
  SIMPLE_PLACE_INTERNATIONAL
  EB5
}

enum BetStatus {
  PENDING
  WON
  LOST
}
